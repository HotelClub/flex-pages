<layout id="norail">
    <region id="top">

    </region>

    <region id="main">
        <module name="PictureText">

            <link rel="stylesheet" href="http://myhotelclub.website/css/style.css"/>
            <style>
                .flexRegistrationMod {
                width: 420px;
                margin-top: -266px;
                margin-right: 30px;
                float:right;
                margin-bottom: 30px;
                }
                .flexRegistration{
                -moz-box-shadow: none;
                -webkit-box-shadow: none;
                -webkit-margin-end: auto;
                -webkit-margin-start: auto;
                background-color: rgb(251, 241, 232);
                border-bottom-width: 0px;
                border-left-width: 0px;
                border-radius: 0px;
                border-right-width: 0px;
                border-spacing: 0px;
                border-top-width: 0px;
                border: 1px solid #c6c8c7;
                box-shadow: none;
                margin-top: 1em;
                overflow: hidden;
                padding: 30px 30px 30px 35px;
                text-align: -webkit-left;
                vertical-align: middle;

                }
                .introductTextTd{
                float: left;
                width: 400px;
                margin-left: 30px;
                }
                .flexRegistration.register .textInput input {
                border: 1px solid #c6c8c7;
                height: 24px;
                padding-left: 5px;
                width: 333px;
                border-radius:0px;
                -moz-box-shadow: none;
                -webkit-box-shadow: none;
                box-shadow: none;
                }
            </style>
            <script language="JavaScript">
                jQuery( document ).ready(function() {
                var formFooter = jQuery("#club-form-footer").html();
                jQuery(".submit.button-primary").replaceWith(formFooter);
                });

            </script>
            <table width="960" border="0" align="left" cellpadding="0" cellspacing="0">
                <tr>
                    <td align="center" width="960">
                        <img src="http://www.tnetnoc.com/public/ANS/HCL/assets/2015/bcm/value_prop/Header-ClubHotels.jpg"
                             alt="More extraordinary with every stay" width="960" height="323" style="padding:-16px;"/>
                        <table width="876" border="0" align="center" cellpadding="0" cellspacing="0"
                               style="margin-top: 24px; margin-bottom:16px; border-bottom:1px solid #b1bbb9;">
                            <tr>
                                <td align="left" valign="top">
                                    <ul style="list-style:none;margin:0; padding:0; font-family:Arial, Helvetica, sans-serif; font-size:14px; font-style:normal;">

                                        <li style="float:left; display:block; padding-left:44px; padding-right:44px; padding-bottom:18px; border-bottom:6px solid #ffffff;">
                                            <a href="/mktg/the-club/" style="text-decoration:none; color:#000000;"
                                               title="THE CLUB">THE CLUB
                                            </a>
                                        </li>

                                        <li style="float:left; display:block; padding-left:44px; padding-right:44px; padding-bottom:18px; border-bottom:6px solid #ffffff;">
                                            <a href="/mktg/benefits/" style="text-decoration:none; color:#000000;"
                                               title="BENEFITS">BENEFITS
                                            </a>
                                        </li>

                                        <li style="float:left; display:block; padding-left:44px; padding-right:44px; padding-bottom:18px; border-bottom:6px solid #55337e; font-weight:bold">
                                            <a href="/mktg/club-hotels/" style="text-decoration:none; color:#55337e;"
                                               title="CLUB HOTELS">CLUB HOTELS
                                            </a>
                                        </li>

                                        <li style="float:left; display:block; padding-left:44px; padding-right:44px; padding-bottom:18px; border-bottom:6px solid #ffffff;">
                                            <a href="#" style="text-decoration:none; color:#000000;" title="BOOK">BOOK
                                            </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <div align="left" valign="top" class="introductTextTd">
                <h1 class="introductTextH1">Welcome to your instant upgrade</h1>
                <span class="clubPageTabText">We partner with selected hotels to make your next stay even more
                    luxurious. Get an instant upgrade plus extra special benefits like complimentary breakfast, Wi-Fi,
                    late check outs and waived resort fees when you book one of our Club Hotels. Available for our Gold
                    and Platinum Members only.
                </span>
                <br/>
                <br/>
                <span class="clubPageTabText">Join HotelClub today and start experiencing these rewards and more with
                    every stay.
                </span>
            </div>
            <div id="club-form-footer" style="display:none;">
                <table width="340" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="200">
                                <input type="image" name="_eventId_submit" border="0" alt="Submit" src="http://www.tnetnoc.com/public/ANS/HCL/assets/2015/bcm/value_prop/Join-Now.png"
                                       onmouseover="this.src='http://www.tnetnoc.com/public/ANS/HCL/assets/2015/bcm/value_prop/Join-Now-Hover.png'"
                                       onmouseout="this.src='http://www.tnetnoc.com/public/ANS/HCL/assets/2015/bcm/value_prop/Join-Now.png'" />
                        </td>
                        <td width="140">
                            <span class="clubTabLabel2">Already have a HotelClub account?
                                <a href="https://www.hotelclub.com/account/login?destinationUrl=/mktg/club-hotels/" title="Sign in to HotelClub" class="clubTabLabelSign">Sign in</a>
                            </span>
                        </td>
                    </tr>
                </table>
            </div>
        </module>
        <module name="Registration" title="Become a member" displayLegal="false" isFullRegistration="true"
                displayTopBorderInTabs="false" callToActionText="Join now" query="contentPurpose:Editorial"

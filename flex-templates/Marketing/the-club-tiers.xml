<layout id="norail">
    <region id="top">
    </region>

    <region id="main">
        <module name="PictureText">
            <link rel="stylesheet" href="http://myhotelclub.website/css/style.css"/>
            <style type="text/css">
                /* reset */

                .preformatted h1, .preformatted h2, .preformatted h3, .preformatted h4, .preformatted h5, .preformatted h6{
                margin:0;
                }
                * {
                font-family: Arial, Helvetica, sans-serif;
                }

                /* page tabs */
                .valueNav li {
                text-align: center;
                float: left;
                display: block;
                }
                .valueNav a {
                text-decoration: none;
                text-align: center;
                padding: 15px;
                border-bottom: 6px solid white;
                display: inline-block;
                margin: 0 auto;
                color: black;
                text-transform: uppercase;
                }

                .valueNav li.current a{
                border-bottom:6px solid #55337e; color:#55337e; font-weight:bold;
                }


                h1{
                font-size:24px; font-style:bold; margin-bottom:15px !important;
                }

                h2{
                font-size:20px; font-style:bold;
                color:black;
                }

                .p {
                margin: 0;
                padding: 0;
                margin-bottom: 30px;
                display: block;
                line-height:24px;
                }

                .relative {
                position: relative;
                }
                table.benefitsTop{
                font-size:11px;
                margin-bottom:17px;
                }

                table.benefitsTop td strong{
                font-size:16px;
                display:block;
                }

                table.benefitsTop h2{
                padding-left:6px;
                }

                .topTd{
                border-left:1px #cccccc solid;
                border-top:1px #cccccc solid;
                width:162px;
                text-align:center;
                padding:10px 0;
                }

                .lastTopTd{
                border-right:1px #cccccc solid;
                }

                h2.hasIcon{
                margin-bottom:15px;
                font-size:18px;
                }

                h2.hasIcon img{
                margin-right:20px;
                vertical-align:middle;
                }

                table.tiers{
                font-size:13px;
                margin-bottom:50px;
                }

                table.tiers td{
                border-bottom:1px #e5e5e5 solid;
                vertical-align:baseline;
                }


                table.tiers td:first-child{
                font-size:18px;
                font-weight:bold;
                padding:15px 3px 15px 6px;
                }

                table.benefitsTop{
                color:#333333;
                }

                table.benefits{
                border-top:1px #cccccc solid;
                width:850px;
                float:right;
                margin-bottom:20px;
                }

                table.benefits > tr:first-child > td{
                border-top:1px #cccccc solid;
                }

                table.benefits > tbody > tr > td{
                border:1px #cccccc solid;
                border-top:none;
                border-left:none;
                }

                table.benefits > tbody > tr > td{
                width:162px;
                text-align:center;
                }

                table.benefits > tbody > tr > td:first-child{
                border-left:1px white solid;
                font-size:13px;
                padding:0 20px;
                width:162px;
                height:60px;
                text-align:left;
                }

                table.benefits > tbody > tr > td:last-child{
                border-right:1px white solid;
                }

            </style>

            ##HTML##

        </module>

    </region>
    <region id="secondary">
    </region>


    <region id="middle">
    </region>
</layout>
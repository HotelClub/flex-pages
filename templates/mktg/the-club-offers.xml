<layout id="norail">
    <region id="top">
    </region>

    <region id="main">
        <module name="PictureText">
            <style type="text/css">
                .preformatted h1, .preformatted h2, .preformatted h3, .preformatted h4, .preformatted h5, .preformatted h6{
                margin:0;}
                * {
                font-family: Arial, Helvetica, sans-serif;
                }
                .valueNav li {
                text-align: center;
                float: left;
                display: block;
                }
                .valueNav a {
                text-decoration: none;
                text-align: center;
                padding: 15px;
                border-bottom: 6px solid white;
                display: inline-block;
                margin: 0 auto;
                color: black;
                text-transform: uppercase;
                }

                .valueNav li.current a{
                border-bottom:6px solid #55337e; color:#55337e; font-weight:bold;
                }

                .flexRegistration {
                width:300px;
                position: absolute;
                -moz-box-shadow: none;
                -webkit-box-shadow: none;
                -webkit-margin-end: auto;
                -webkit-margin-start: auto;
                background-color: rgb(251, 241, 232);
                border-bottom-width: 0px;
                border-left-width: 0px;
                border-radius: 0px;
                border-right-width: 0px;
                border-spacing: 0px;
                border-top-width: 0px;
                border: 1px solid #c6c8c7;
                box-shadow: none;
                overflow: hidden;
                padding: 20px;
                text-align: -webkit-left;
                vertical-align: middle;
                }

                .flexRegistration.register .textInput input {
                border: 1px solid #c6c8c7;
                height: 24px;
                padding-left: 2%;
                width: 96%;
                border-radius: 0px;
                -moz-box-shadow: none;
                -webkit-box-shadow: none;
                box-shadow: none;
                margin-bottom:0;
                }
                .introductTextTd {
                float: left;
                width: 400px;
                margin-left: 30px;
                }
                h1{
                font-size:24px; font-style:bold; margin-bottom:15px !important;
                }

                h2.h2{
                font-size:30px; font-style:bold; margin-bottom:40px;
                }

                .p {
                margin: 0;
                padding: 0;
                margin-bottom: 30px;
                display: block;
                line-height:24px;
                }
                .notRegistered {
                font-size: 14px;
                background: #eeeaf2;
                border: 1px #d4ccdf solid;
                padding: 15px 25px;
                line-height: 16px;
                text-align: center;
                }

                .cardContainer{
                padding-top:40px;
                }

                .card {
                border: 1px #d9d9d9 solid;
                background: white;
                font-family: Arial, Helvetica, sans-serif;
                }
                .relative {
                position: relative;
                }
                .cardText {
                padding: 13px;
                text-align: center;
                }
                .relative img.icon {
                position: absolute;
                top: 0;
                left: 15px;
                }
                .only, .offerType {
                color: white;
                background: #ee2631;
                font-size: 11px;
                text-align: center;
                text-transform: uppercase;
                }
                .only td, .offerType td {
                line-height: 25px;
                }
                .only {
                background: black;
                position: absolute;
                left: 0;
                bottom: 0;
                }
                .rewardMembers {
                background: #ee2631;
                }
                .goldMembers {
                background: #fece2f;
                color: black;
                }
                .card .p {
                font-weight: bold;
                font-size: 15px;
                line-height: 17px;
                margin-bottom: 15px;
                }
                .card .p.type {
                font-weight: normal;
                font-size: 11px;
                text-transform: uppercase;
                color: #858585;
                margin-bottom: 8px;
                background-position: center top;
                }
                .loadMore {
                background: #f6f6f6;
                border: 1px #d9d9d9 solid;
                text-align: center;
                margin-bottom: 40px;
                position: relative;
                }
                .loadMore .bottomArrow {
                position: absolute;
                bottom: -7px;
                left: 50%;
                }
                .loadMore a {
                color: #666666;
                text-decoration: none;
                font-weight: bold;
                font-size: 14px;
                display: block;
                padding: 3px;
                }
                .allMembers{
                background:white !important;
                color:black !important;
                }
                .textContent div {
                padding: 10px 5px;
                }
                .preformatted p {
                font-size: 16px;
                padding: 20px 10px;
                }
                .introductTextTab {
                border: 1px solid #c6c8c7;
                margin-top: 20px;
                }
                /*#the-club-offers-intro-nonmember, #the-club-offers-intro-member,#the-club-offers-benefits{display:none;    margin-bottom: 20px;}*/
                .introductTextSpan{
                font-size:16px;
                font-weight:bold;
                }
                .flexEditorialMod,.flexLoyaltyMod {
                display:none;
                }
                #offer-overlay {
                opacity: 80;
                position: absolute;
                filter: alpha(opacity = 80);
                display: block;
                z-index: 30;
                background: rgba(0, 0, 0, 0.7);
                float: left;

                margin:-10px;
                display:none;
                }
                .the-club-offers-benefits{
                position:relative;
                z-index:1;
                }
                #offer-overlay-content{
                margin-top: 20%;

                width: 600px;
                font-size: 20px;
                background-color: #fff;
                }
            </style>
            <script language="JavaScript">

                jQuery( document ).ready(function() {
                var flexLoyaltyMod = jQuery(".flexLoyaltyMod").html();
                var flexEditorialMod = jQuery(".flexEditorialMod div.introduction").html();
                if(flexEditorialMod == null){
                    jQuery("#flexLoyaltyMod-custom").replaceWith(flexLoyaltyMod);
                    jQuery("#the-club-offers-intro-nonmember").show();
                    jQuery("#the-club-offers-intro-member").hide();
                    jQuery("#the-club-offers-benefits").show();
                    jQuery("#the-club-offers-benefits").click(function(e){e.preventDefault();});
                    var offerBenefitDivHeight =  jQuery("#the-club-offers-benefits-container").height();
                    console.log('offer hwight=' + offerBenefitDivHeight);
                    jQuery("#offer-overlay").height(offerBenefitDivHeight);
                    jQuery("#offer-overlay").width(925);
                    jQuery("#offer-overlay").show();
                    var btnJoinNow = jQuery(".linkAsButton.button-primary.button-large.joinButton").html();
                    jQuery("#offer-overlay-cta").replaceWith(btnJoinNow);


                }else{
                    jQuery("#flexLoyaltyMod-logged-in").replaceWith(flexEditorialMod );
                    jQuery("#the-club-offers-intro-nonmember").hide();
                    jQuery("#the-club-offers-intro-member").show();
                    jQuery("#the-club-offers-benefits").show();
                    jQuery("#offer-overlay").hide();
                }
                });
            </script>

            ##HTML##

        </module>
        <!-- loyalty module START-->
        <module name="Loyalty" query="contentPurpose:Editorial" steerModuleKey="rego-non-member" view="unrecognizedUser" doNotShowForVisitorType="signedIn,recognized" />
        <module name="Editorial" query="contentPurpose:Editorial" steerModuleKey="rego-member" doNotShowForVisitorType="NonRecognized_NonCookied, NonRecognized_Cookied" />

        <!-- loyalty module END-->
    </region>

    <region id="secondary">
    </region>


    <region id="middle">
    </region>
</layout>
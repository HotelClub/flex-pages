<layout id="norail">
    <region id="top">
    </region>

    <region id="main">
        <module name="PictureText">
            <style type="text/css">
                .preformatted h1, .preformatted h2, .preformatted h3, .preformatted h4, .preformatted h5, .preformatted h6{
                margin:0;
                }
                * {
                font-family: Arial, Helvetica, sans-serif;
                }

                /* page tabs */
                .valueNav li {
                text-align: center;
                float: left;
                display: block;
                }
                .valueNav a {
                text-decoration: none;
                text-align: center;
                padding: 15px;
                border-bottom: 6px solid white;
                display: inline-block;
                margin: 0 auto;
                color: black;
                text-transform: uppercase;
                }

                .valueNav li.current a{
                border-bottom:6px solid #55337e; color:#55337e; font-weight:bold;
                }

                /* register form */
                .flexRegistrationMod {
                position: relative;
                }
                .flexRegistration {
                margin-top: -330px;
                width:300px;
                right: 40px;
                position: absolute;
                -moz-box-shadow: none;
                -webkit-box-shadow: none;
                -webkit-margin-end: auto;
                -webkit-margin-start: auto;
                background-color: rgb(251, 241, 232);
                border-bottom-width: 0px;
                border-left-width: 0px;
                border-radius: 0px;
                border-right-width: 0px;
                border-spacing: 0px;
                border-top-width: 0px;
                border: 1px solid #c6c8c7;
                box-shadow: none;
                overflow: hidden;
                padding: 20px;
                text-align: -webkit-left;
                vertical-align: middle;
                }
                .introductTextTd {
                float: left;
                width: 400px;
                margin-left: 30px;
                }
                .flexRegistration.register .textInput input {
                border: 1px solid #c6c8c7;
                height: 24px;
                padding-left: 2%;
                width: 96%;
                border-radius: 0px;
                -moz-box-shadow: none;
                -webkit-box-shadow: none;
                box-shadow: none;
                margin-bottom:0;
                }

                h1{
                font-size:24px; font-style:bold; margin-bottom:15px !important;
                }

                h2.h2{
                font-size:30px; font-style:bold; margin-bottom:40px;
                }

                .p {
                margin: 0;
                padding: 0;
                margin-bottom: 30px;
                display: block;
                line-height:24px;
                }
                .notRegistered {
                font-size: 14px;
                background: #eeeaf2;
                border: 1px #d4ccdf solid;
                padding: 15px 25px;
                line-height: 16px;
                text-align: center;
                }

                .cardContainer{
                padding-top:40px;
                }

                .card {
                border: 1px #d9d9d9 solid;
                background: white;
                font-family: Arial, Helvetica, sans-serif;
                }
                .relative {
                position: relative;
                }
                .cardText {
                padding: 13px;
                text-align: center;
                }
                .icon {
                position: absolute;
                top: 0;
                left: 15px;
                }
                .only, .offerType {
                color: white;
                background: #ee2631;
                font-size: 11px;
                text-align: center;
                text-transform: uppercase;
                }
                .only td, .offerType td {
                line-height: 25px;
                }
                .only {
                background: black;
                position: absolute;
                left: 0;
                bottom: 0;
                }
                .rewardMembers {
                background: #ee2631;
                }
                .goldMembers {
                background: #fece2f;
                color: black;
                }
                .card .p {
                font-weight: bold;
                font-size: 15px;
                line-height: 17px;
                margin-bottom: 15px;
                }
                .card .p.type {
                font-weight: normal;
                font-size: 11px;
                text-transform: uppercase;
                color: #858585;
                margin-bottom: 8px;
                background-position: center top;
                }
                .loadMore {
                background: #f6f6f6;
                border: 1px #d9d9d9 solid;
                text-align: center;
                margin-bottom: 40px;
                position: relative;
                }
                .loadMore .bottomArrow {
                position: absolute;
                bottom: -7px;
                left: 50%;
                }
                .loadMore a {
                color: #666666;
                text-decoration: none;
                font-weight: bold;
                font-size: 14px;
                display: block;
                padding: 3px;
                }
                .flexSearchFormMod{display:none;}
                .searchFormContainer h2, .primaryLabel{padding:10px 0px;}
                .inputBox{
                float:left; margin-right:30px;}

            </style>
            <script language="JavaScript">
                jQuery( document ).ready(function() {
                var flexSearchMod = jQuery(".flexSearchFormMod").html();
                if(flexSearchMod == null){
                }else{
                jQuery("#flexMod-custom").replaceWith(flexSearchMod );
                }
                });

            </script>

            ##HTML##

        </module>
        <module name="SearchForm" visible="true" title="Search for hotels" view="modern"  displayRecentSearches="true" displayPromoCode="true" />
    </region>
    <region id="secondary">



    </region>


    <region id="middle">

    </region>
</layout>